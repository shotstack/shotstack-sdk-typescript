{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
